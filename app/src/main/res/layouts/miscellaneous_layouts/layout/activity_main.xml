<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mainBackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dl">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/patient_physician"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="add"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center_vertical|center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_isPhysician"
                android:layout_width="379dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                android:layout_below="@+id/WelcomeText"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/button_isPhysician"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mainTextColor"
                    android:text="@string/physician_MainActivity"
                    android:textSize="18sp"
                    android:layout_marginBottom="-5dp"
                    android:textColor="@android:color/black"
                    android:textAllCaps="true" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_isPatient"
                android:layout_width="379dp"
                android:layout_height="100dp"
                android:layout_below="@+id/cardView_isPhysician"
                app:cardUseCompatPadding="true"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp">

                <Button
                    android:id="@+id/button_isPatient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-5dp"
                    android:background="@color/mainTextColor"
                    android:textColor="@android:color/black"
                    android:text="@string/patient_MainActivity"
                    android:textSize="18sp"
                    android:textAllCaps="true" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.drawerlayout.widget.DrawerLayout>