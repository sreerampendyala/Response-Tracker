<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".SignUpActivities.PhysicianSignUpActivity">

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/create_Progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="175dp"
        android:layout_height="114dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_signup_tb"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="@string/email_name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uerId_signup_tb"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/uerId_signup_tb"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Name or Id"
        android:inputType="textPersonName"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183" />

    <EditText
        android:id="@+id/pwd_signup_tb"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_signup_tb"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/signUpBtn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/times_new_roman_400"
        android:text="Create Account"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>