<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_physician_home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".HomeActivites.PhysicianHome">

        <EditText
            android:id="@+id/subjectName_tb"
            android:layout_width="298dp"
            android:layout_height="51dp"
            android:ems="10"
            android:hint="Subject Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_tv"
            app:layout_constraintVertical_bias="0.094" />

        <TextView
            android:id="@+id/welcome_tv"
            android:layout_width="319dp"
            android:layout_height="140dp"
            android:fontFamily="@font/cinzel_decorative_black"
            android:text="Welcome, Have a Good Testing !!"
            android:textColor="#689F38"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_tv"
            app:layout_constraintVertical_bias="0.027" />

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="308dp"
            android:layout_height="71dp"
            android:fontFamily="@font/cinzel_decorative_black"
            android:text="TextView"
            android:textColor="#689F38"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.092" />

        <EditText
            android:id="@+id/subjectid_tb"
            android:layout_width="298dp"
            android:layout_height="51dp"
            android:ems="10"
            android:hint="Subject Unique Id"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subjectName_tb"
            app:layout_constraintVertical_bias="0.094" />

        <Button
            android:id="@+id/existingUsr_btn"
            android:layout_width="118dp"
            android:layout_height="65dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/alegreya_sans_sc_extrabold"
            android:text="Existing"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.819" />

        <Button
            android:id="@+id/newUser_btn"
            android:layout_width="118dp"
            android:layout_height="65dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/alegreya_sans_sc_extrabold"
            android:text="New"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.818" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View_App_Home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="visible"
        app:headerLayout="@layout/navigation_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu="@menu/nav_menu_app_home"
        tools:visibility="visible">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
